<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222A32"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="#19222B"
                android:clickable="false"
                android:fontFamily="@font/hanalei_fill"
                android:gravity="center"
                android:text="GET the flag!"
                android:textColor="#D0CCD4"
                android:textSize="40sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_mono_bold"
                android:gravity="center"
                android:text="Status"
                android:textColor="#DBDEE1"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/b1"
                android:layout_width="240dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:background="#58E1D3"
                android:fontFamily="@font/fira_mono_bold"
                android:text="@string/b1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="51dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="240dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:background="#84D176"
                android:fontFamily="@font/fira_mono_bold"
                android:text="@string/b2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="51dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="240dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:background="#AE76D1"
                android:fontFamily="@font/fira_mono_bold"
                android:text="@string/b3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="51dp" />

            <Button
                android:id="@+id/b4"
                android:layout_width="240dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:background="#E4A07B"
                android:fontFamily="@font/fira_mono_bold"
                android:text="@string/b4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="51dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>