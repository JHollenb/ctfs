{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "isolatedModules": true,

    "strict": true,

    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}